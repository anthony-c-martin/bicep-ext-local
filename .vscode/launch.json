{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension (HTTP)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Solution",
      "program": "${workspaceFolder}/src/bin/Debug/bicep-ext-local",
      "args": [
        "--http",
        "8080"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "stopAtEntry": false,
      "console": "internalConsole"
    }
  ]
}

